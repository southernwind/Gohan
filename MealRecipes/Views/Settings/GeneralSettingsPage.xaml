<UserControl x:Class="SandBeige.MealRecipes.Views.Settings.GeneralSettingsPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	xmlns:settingsVm="clr-namespace:SandBeige.MealRecipes.ViewModels.Settings"
	xmlns:local="clr-namespace:SandBeige.MealRecipes.Views.Settings"
	xmlns:mat="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
	mc:Ignorable="d"
	d:DataContext="{d:DesignInstance settingsVm:GeneralSettingsViewModel}"
	d:DesignHeight="450" d:DesignWidth="800">
	<StackPanel>
		<GroupBox Header="{Binding Name}">
			<StackPanel>
				<TextBox Text="{Binding DataBaseFilePath.Value,UpdateSourceTrigger=PropertyChanged}" mat:HintAssist.Hint="DBファイルパス" />
				<TextBox Text="{Binding ImageDirectoryPath.Value,UpdateSourceTrigger=PropertyChanged}" mat:HintAssist.Hint="画像ルートディレクトリパス"/>
				<TextBox Text="{Binding PluginsDirectoryPath.Value,UpdateSourceTrigger=PropertyChanged}" mat:HintAssist.Hint="プラグインディレクトリパス"/>
			</StackPanel>
		</GroupBox>
	</StackPanel>
</UserControl>
